<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Undertangocoin"
        tools:targetApi="31">

        <!-- Configuración de la actividad principal WelcomeScreen -->
        <activity
            android:name=".ui.screens.WelcomeScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Undertangocoin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declaración de RegisterActivity -->
        <activity
            android:name=".ui.screens.RegisterActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Undertangocoin" />

        <!-- Declaración de MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Undertangocoin" />

        <!-- Declaración de TutorialScreen -->
        <activity
            android:name=".ui.screens.TutorialScreen"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Undertangocoin" />

        <!-- Declaración de GameScreen -->
        <activity
            android:name=".ui.screens.GameScreen"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Undertangocoin" />

        <!-- Declaración de TradeScreen -->
        <activity
            android:name=".ui.screens.TradeScreen"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Undertangocoin" />

    </application>

</manifest>